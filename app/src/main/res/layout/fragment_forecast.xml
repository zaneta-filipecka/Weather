<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ForecastFragment">

    <LinearLayout
        android:id="@+id/main_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 DAYS WEATHER FORECAST"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather in London,GB"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/geo_coord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[35.42]"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"></TextView>

    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_info"
        android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>